<div class="container">

<%# --------- Card Top --------- %>
  <div class="row">
    <div class="col-12">
      <div class="container-cards">
        <h1>
          <%= @movie.title.capitalize %>
        </h1>
        <h1>Release year
          <% if @movie.release_year? %>
            <%= @movie.release_year %>
          <% else %>
            1900
          <% end %>
        </h1>
        <p>Price - <%= @movie.price_per_day %>$</p>
      </div>
    </div>
  </div>

<%# --------- All Cards --------- %>
  <div class="row">

    <div class="col-6">
      <%# --------- Card Description --------- %>
      <div class="vhs-show-card mt-3" style="width: 30rem;">
          <h5>Description</h5>
          <p><%= @movie.description %></p>
      </div>
      <%# --------- Card Booking --------- %>
      <div class="vhs-show-card mt-3" style="width: 30rem;">
        <h5>Book this VHS!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From</span>
            <input type="text" class="form-control" placeholder="12/03/2021" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To</span>
            <input type="text" class="form-control" placeholder="18/03/2021" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book it now!" class="vhs-button mt-2" style="width: 100%">
        </form>
      </div>
    </div>
    <%# --------- Card Image --------- %>
    <div class="col-6">
      <div class="vhs-show-card mt-3 mb-3" style="width: 30rem;">
          <h5>VHS cover</h5>
          <% if @movie.photo.attached? %>
            <%= cl_image_tag @movie.photo.key, class: "img-fluid" %>
          <% else %>
            <p>Missing image</p>
          <% end %>
      </div>
    </div>
  </div>

</div>

