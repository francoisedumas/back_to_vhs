<div class="mt-3">
  <%= simple_form_for([:owner, @movie]) do |f| %>

    <div class="form-inputs">
      <%= f.input :title, placeholder: "Give a title"%>
    </div>

    <div class="form-inputs">
      <%= f.input :description, placeholder: "Add a description" %>
    </div>

    <div class="form-inputs">
      <%= f.input :price_per_day, placeholder: "10" %>
    </div>

    <div class="form-inputs">
      <%= f.input :address, placeholder: "10, Broadway, New York" %>
    </div>

    <div class="form-inputs">
      <%= f.input :release_year, placeholder: "1988" %>
    </div>

    <div class="form-inputs">
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>

