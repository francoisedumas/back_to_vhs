<div class="mt-3">
  <%= simple_form_for([:owner, @movie]) do |f| %>

    <div class="form-inputs">
      <%= f.input :title, placeholder: "Back to the Future"%>
    </div>

    <div class="form-inputs">
      <%= f.input :description, placeholder: "Marty McFly, a teenager..." %>
    </div>

    <div class="form-inputs">
      <%= f.input :price_per_day, placeholder: "10" %>
    </div>

    <div class="form-inputs">
      <%= f.input :address, placeholder: "10, Broadway, New York" %>
    </div>

    <div class="form-inputs">
      <%= f.input :release_year, placeholder: "1985" %>
    </div>

    <div class="form-inputs">
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Add VHS", class: "vhs-button mt-3 mb-3" %>
    </div>
  <% end %>
</div>

